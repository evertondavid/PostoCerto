# PostgreSQL Configuration
POSTGRES_USER=postocerto
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=postocerto
POSTGRES_PORT=5432

# MongoDB Configuration
MONGO_INITDB_ROOT_USERNAME=postocerto
MONGO_INITDB_ROOT_PASSWORD=your_secure_password_here
MONGO_PORT=27017

# Identity Service
IDENTITY_SERVICE_PORT=7001
JWT_SECRET_KEY=your_jwt_secret_key_here_min_32_chars
JWT_ISSUER=PostoCerto
JWT_AUDIENCE=PostoCerto.Api
JWT_EXPIRATION_MINUTES=60
REFRESH_TOKEN_EXPIRATION_DAYS=7

# Stations Service
STATIONS_SERVICE_PORT=7002
ANP_API_BASE_URL=https://dados.gov.br/api/

# Prices Service
PRICES_SERVICE_PORT=7003

# Recommendations Service
RECOMMENDATIONS_SERVICE_PORT=7004
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# API Gateway
API_GATEWAY_REST_PORT=8080
API_GATEWAY_GRPC_PORT=8081
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Ingestion Worker
INGESTION_WORKER_SCHEDULE_STATIONS=0 0 * * 0
INGESTION_WORKER_SCHEDULE_PRICES=0 2 * * *

# Frontend Web
VITE_API_BASE_URL=http://localhost:8080

# Logging
SERILOG_MINIMUM_LEVEL=Information
SERILOG_WRITE_TO_CONSOLE=true

# Docker Network
DOCKER_NETWORK=postocerto-network
